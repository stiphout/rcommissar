<h1>New rule</h1>

<% form_for(@rule) do |f| %>
  <%= f.error_messages %>

    <p>
      <b>Description</b>
      <br/>
      <%= f.text_field :description %>
    </p>
    <p>
        <b>Body</b>
        <br/>
      <%= f.text_area :body, :cols => 80, :rows => 20 %>
    </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', rules_path %>
